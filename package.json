{
	"name": "lintit",
	"displayName": "Lint It",
	"description": "Lint parser for PC-Lint",
	"publisher": "greghoeppner",
	"version": "0.1.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/greghoeppner/LintIt"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onCommand:lintIt.execute",
		"onLanguage:c"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "lintIt.execute",
				"title": "LintIt: Run"
			}
		],
		"configuration": [
			{
				"title": "Lint It",
				"properties": {
					"lintit.aggressiveMode": {
						"type": "boolean",
						"scope": "application",
						"description": "Enables/disables agressive lint mode (all open files will be linted instead of just the changed file",
						"default": false
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.24",
		"@types/vscode": "^1.47.0",
		"eslint": "^7.5.0",
		"@typescript-eslint/parser": "^3.7.0",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.9.7",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"async-mutex": "^0.2.4"
	}
}
